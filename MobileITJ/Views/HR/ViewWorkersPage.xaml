<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MobileITJ.Models"
             xmlns:viewmodel="clr-namespace:MobileITJ.ViewModels"
             x:DataType="viewmodel:ViewWorkersViewModel"
             x:Class="MobileITJ.Views.HR.ViewWorkersPage"
             Title="View Workers"
             BackgroundColor="{StaticResource BackgroundColor}">

    <RefreshView Command="{Binding LoadWorkersCommand}" 
                 IsRefreshing="{Binding IsBusy}">
        <CollectionView ItemsSource="{Binding Workers}"
                        EmptyView="No workers found.">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:WorkerDetail">
                    <Frame Padding="15" Margin="10,5" CornerRadius="10" BorderColor="#E0E0E0" HasShadow="True">
                        <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, Auto">

                            <Label Grid.Row="0" Grid.Column="0" 
                                   Text="{Binding FullName}" 
                                   FontAttributes="Bold" FontSize="18"/>

                            <Label Grid.Row="0" Grid.Column="1" 
                                   Text="{Binding WorkerId}" 
                                   FontSize="12" TextColor="Gray" VerticalOptions="Start"/>

                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                   Text="{Binding SkillsDisplay}" 
                                   FontSize="14" FontAttributes="Italic" Margin="0,5,0,0"/>

                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                   Spacing="10" Margin="0,15,0,0" VerticalOptions="Center">

                                <Label VerticalOptions="Center" FontAttributes="Bold">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="Text" Value="Active" />
                                            <Setter Property="TextColor" Value="{StaticResource SecondaryColor}" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsActive}" Value="False">
                                            <Setter Property="Text" Value="Deactivated" />
                                            <Setter Property="TextColor" Value="{StaticResource DangerColor}" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>

                                <Switch IsToggled="{Binding IsActive}"
                                        ThumbColor="{StaticResource PrimaryColor}"
                                        Toggled="OnWorkerToggled" />

                                <Button Text="Add Skill" 
                                        Style="{StaticResource TopTabButton}"
                                        BackgroundColor="White"
                                        TextColor="{StaticResource PrimaryColor}"
                                        BorderColor="{StaticResource PrimaryColor}"
                                        FontSize="10" Padding="8,4"
                                        Clicked="OnAddSkillClicked" />

                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </RefreshView>
</ContentPage>