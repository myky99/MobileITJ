<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MobileITJ.ViewModels"
             x:DataType="viewmodel:CreateWorkerViewModel"
             x:Class="MobileITJ.Views.HR.CreateWorkerPage"
             Title="Create Worker"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Image 
                Source="logo.jpg"
                HeightRequest="300"
                WidthRequest="400"
                HorizontalOptions="Center" />

            <Label Text="Create New Worker"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource TextDark}" />

            <VerticalStackLayout Spacing="10">
                <Entry Placeholder="First Name" Text="{Binding FirstName}" />
                <Entry Placeholder="Last Name" Text="{Binding LastName}" />
                <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />

                <Label Text="Primary Skill" FontAttributes="Bold" TextColor="Gray"/>
                <Frame Padding="0" BorderColor="LightGray" CornerRadius="5" HasShadow="False">
                    <Picker Title="Select Skill"
                            ItemsSource="{Binding AvailableSkills}"
                            SelectedItem="{Binding SelectedSkill}"
                            TextColor="Black" 
                            TitleColor="Gray"/>
                </Frame>

                <Entry Placeholder="Type specific skill..." 
                       Text="{Binding CustomSkillEntry}"
                       IsVisible="{Binding IsCustomSkillVisible}"
                       Margin="0,5,0,0"/>
                <Entry Placeholder="Rate Per Hour" Text="{Binding RatePerHour}" Keyboard="Numeric" />

                <Button Text="Create Worker Account"
                        Command="{Binding SubmitWorkerCommand}"
                        BackgroundColor="{StaticResource SecondaryColor}"
                        TextColor="White"
                        HorizontalOptions="Fill" />

                <Label Text="{Binding ErrorMessage}"
                       TextColor="{StaticResource DangerColor}"
                       HorizontalOptions="Center" />

                <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>