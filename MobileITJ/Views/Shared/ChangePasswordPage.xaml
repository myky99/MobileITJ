<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MobileITJ.ViewModels"
             x:DataType="viewmodel:ChangePasswordViewModel"
             x:Class="MobileITJ.Views.Shared.ChangePasswordPage"
             Title="Change Password">
    <VerticalStackLayout Spacing="15" Padding="30" VerticalOptions="Center">

        <Label Text="Change Your Password"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Entry Placeholder="Current Password" 
               Text="{Binding CurrentPassword}" 
               IsPassword="True" />

        <Entry Placeholder="New Password" 
               Text="{Binding NewPassword}" 
               IsPassword="True" />

        <Button Text="Update Password" 
                Command="{Binding ChangeCommand}" 
                HorizontalOptions="Fill" />

        <Label Text="{Binding ErrorMessage}" 
               TextColor="{StaticResource DangerColor}" 
               HorizontalOptions="Center" />

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

    </VerticalStackLayout>
</ContentPage>