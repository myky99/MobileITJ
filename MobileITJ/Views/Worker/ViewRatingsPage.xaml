<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MobileITJ.Models"
             xmlns:viewmodel="clr-namespace:MobileITJ.ViewModels"
             x:DataType="viewmodel:ViewRatingsViewModel"
             x:Class="MobileITJ.Views.Worker.ViewRatingsPage"
             Title="My Ratings"
             BackgroundColor="{StaticResource BackgroundColor}">

    <RefreshView Command="{Binding LoadRatingsCommand}" 
                 IsRefreshing="{Binding IsBusy}">
        <CollectionView ItemsSource="{Binding RatedJobs}"
                        EmptyView="You have not received any ratings yet.">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:RatingDetail">
                    <Frame Padding="15" Margin="10,5" CornerRadius="10" BorderColor="#E0E0E0" HasShadow="True">
                        <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*">

                            <Label Grid.Row="0" 
                                   Text="{Binding JobDescription}" 
                                   FontAttributes="Bold" FontSize="18"/>

                            <Label Grid.Row="1"
                                   FontSize="18" TextColor="{StaticResource PrimaryColor}" Margin="0,10,0,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Rating: " />
                                        <Span Text="{Binding Rating}" />
                                        <Span Text=" ⭐️" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label Grid.Row="2"
                                   Text="{Binding Review}"
                                   FontAttributes="Italic"
                                   FontSize="14" Margin="0,5,0,0"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </RefreshView>
</ContentPage>