<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MobileITJ.Models"
             xmlns:viewmodel="clr-namespace:MobileITJ.ViewModels"
             x:DataType="viewmodel:ViewOngoingJobsViewModel"
             x:Class="MobileITJ.Views.Worker.ViewOngoingJobsPage"
             Title="My Jobs"
             BackgroundColor="{StaticResource BackgroundColor}"
             x:Name="ThisPage">

    <Grid RowDefinitions="Auto, *">
        <Image Grid.Row="0" Source="banner.jpg" Aspect="AspectFit" HeightRequest="200" Margin="0"/>

        <RefreshView Grid.Row="1" 
                     Command="{Binding LoadJobsCommand}" 
                     IsRefreshing="{Binding IsBusy}">

            <ScrollView>
                <VerticalStackLayout Padding="10" Spacing="20">

                    <Label Text="Pending Applications" FontSize="20" FontAttributes="Bold" TextColor="Orange"/>

                    <CollectionView ItemsSource="{Binding PendingApplications}"
                                    EmptyView="No pending applications.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:MyJobDetail">
                                <Frame Padding="15" Margin="0,5" CornerRadius="10" BorderColor="Orange" BackgroundColor="#FFF8E1">
                                    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto">
                                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Job.JobDescription}" FontAttributes="Bold" FontSize="16"/>
                                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding Job.Location}" FontSize="12" TextColor="Gray"/>
                                        <Label Grid.Row="0" Grid.Column="1" Text="Waiting for Approval" TextColor="Orange" FontAttributes="Italic" FontSize="12"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <BoxView HeightRequest="1" Color="Gray" Margin="0,10" />

                    <Label Text="Active Jobs" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource PrimaryColor}"/>

                    <CollectionView ItemsSource="{Binding ActiveJobs}"
                                    EmptyView="No active jobs.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:MyJobDetail">
                                <Frame Padding="15" Margin="0,5" CornerRadius="10" BorderColor="#E0E0E0" HasShadow="True">
                                    <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="*">

                                        <Label Grid.Row="0" Text="{Binding Job.JobDescription}" FontAttributes="Bold" FontSize="18"/>
                                        <Label Grid.Row="1" Text="{Binding Job.Location}" FontSize="14" Margin="0,5,0,0"/>

                                        <Label Grid.Row="2" FontAttributes="Bold" FontSize="14" Margin="0,10,0,0">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Time Logged: "/>
                                                    <Span Text="{Binding TotalTimeSpent, Converter={StaticResource TimeSpanToStringConverter}}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <HorizontalStackLayout Grid.Row="3" Spacing="10" Margin="0,15,0,0">
                                            <Button Style="{StaticResource TopTabButton}"
                                                    HorizontalOptions="Start"
                                                    Command="{Binding BindingContext.ToggleClockCommand, Source={x:Reference ThisPage}}"
                                                    CommandParameter="{Binding .}">
                                                <Button.Triggers>
                                                    <DataTrigger TargetType="Button" Binding="{Binding IsClockedIn}" Value="False">
                                                        <Setter Property="Text" Value="Clock In" />
                                                        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
                                                        <Setter Property="TextColor" Value="White" />
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Button" Binding="{Binding IsClockedIn}" Value="True">
                                                        <Setter Property="Text" Value="Clock Out" />
                                                        <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}" />
                                                        <Setter Property="TextColor" Value="White" />
                                                    </DataTrigger>
                                                </Button.Triggers>
                                            </Button>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <BoxView HeightRequest="1" Color="Gray" Margin="0,10" />

                    <Label Text="Job History" FontSize="20" FontAttributes="Bold" TextColor="Gray"/>

                    <CollectionView ItemsSource="{Binding JobHistory}"
                                    EmptyView="No completed jobs yet.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:MyJobDetail">
                                <Frame Padding="15" Margin="0,5" CornerRadius="10" BorderColor="#E0E0E0" BackgroundColor="#F5F5F5">
                                    <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, Auto">
                                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Job.JobDescription}" FontAttributes="Bold" FontSize="16" TextColor="Gray"/>
                                        <Frame Grid.Row="0" Grid.Column="1" Padding="8,2" CornerRadius="5" BackgroundColor="Gray" HasShadow="False">
                                            <Label Text="{Binding Job.Status}" TextColor="White" FontSize="10" FontAttributes="Bold"/>
                                        </Frame>
                                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Job.Location}" FontSize="12" TextColor="Gray" Margin="0,2,0,0"/>
                                        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FontSize="12" TextColor="Black" Margin="0,5,0,0">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Total Hours Worked: " FontAttributes="Bold"/>
                                                    <Span Text="{Binding TotalTimeSpent, Converter={StaticResource TimeSpanToStringConverter}}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>