<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MobileITJ.Models"
             xmlns:viewmodel="clr-namespace:MobileITJ.ViewModels"
             x:DataType="viewmodel:ViewOngoingJobsViewModel"
             x:Class="MobileITJ.Views.Worker.ViewOngoingJobsPage"
             Title="My Jobs"
             BackgroundColor="{StaticResource BackgroundColor}"
             x:Name="ThisPage">

    <Grid RowDefinitions="Auto, *">
        <Image Grid.Row="0" Source="banner.jpg" Aspect="AspectFit" HeightRequest="200" Margin="0"/>

        <RefreshView Grid.Row="1" 
                     Command="{Binding LoadJobsCommand}" 
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding MyJobs}"
                            EmptyView="You have not been accepted for any jobs yet.">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MyJobDetail">
                        <Frame Padding="15" Margin="10,5" CornerRadius="10" BorderColor="#E0E0E0" HasShadow="True">
                            <Grid RowDefinitions="Auto, Auto, Auto, Auto" ColumnDefinitions="*">

                                <Label Grid.Row="0" 
                                       Text="{Binding Job.JobDescription}" 
                                       FontAttributes="Bold" FontSize="18"/>

                                <Label Grid.Row="1"
                                       Text="{Binding Job.Location}" 
                                       FontSize="14" Margin="0,5,0,0"/>

                                <Label Grid.Row="2"
                                       FontAttributes="Bold"
                                       FontSize="14" Margin="0,10,0,0">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Total Time Logged: "/>
                                            <Span Text="{Binding TotalTimeSpent, Converter={StaticResource TimeSpanToStringConverter}}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <HorizontalStackLayout Grid.Row="3" Spacing="10" Margin="0,15,0,0">

                                    <Button Style="{StaticResource TopTabButton}"
                                            HorizontalOptions="Start"
                                            Command="{Binding BindingContext.ToggleClockCommand, Source={x:Reference ThisPage}}"
                                            CommandParameter="{Binding .}">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding IsClockedIn}" Value="False">
                                                <Setter Property="Text" Value="Clock In" />
                                                <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
                                                <Setter Property="TextColor" Value="White" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Button" Binding="{Binding IsClockedIn}" Value="True">
                                                <Setter Property="Text" Value="Clock Out" />
                                                <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}" />
                                                <Setter Property="TextColor" Value="White" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Button" Binding="{Binding Job.Status}" Value="Completed">
                                                <Setter Property="IsVisible" Value="False" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>

                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>