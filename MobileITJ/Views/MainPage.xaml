<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MobileITJ.Views.MainPage"
    Title="Main Page"
    BackgroundColor="{StaticResource BackgroundColor}">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Welcome to MobileITJ!"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button Text="Go to Login" Clicked="OnLoginClicked" />
        <Button Text="Go to Register" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
